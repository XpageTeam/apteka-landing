.btn
	display: inline-flex
	align-items: center
	white-space: nowrap
	border-radius: 5px
	background: var(--second-color)
	letter-spacing: 0.02em
	transition: background-color .4s ease, color .4s ease, border-color .4s ease
	font-size: rem(14)
	padding: 9px 15px
	line-height: inherit
	cursor: pointer
	color: var(--main-color)
	border: 0

	
