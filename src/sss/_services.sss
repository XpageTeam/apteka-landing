.services
	&-cont
		background: var(--main-color)
		padding: 80px 0 95px

	.title
		color: #fff
		margin-bottom: 50px

	&__list
		display: flex
		flex-wrap: wrap
		margin: 0 0 -35px -35px

	&__item
		width: calc((100% - 35px * 3) / 3)
		margin: 0 0 35px 35px
		background: #fff
		box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2)
		border-radius: 5px
		display: flex
		align-items: center
		font-size: 14px
		line-height: 155.4%
		padding: 25px 20px 25px 40px

		&-ico
			margin-right: 30px
			flex: none
